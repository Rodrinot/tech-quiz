<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/mediumMargin2</item>
        <item name="android:layout_marginLeft" tools:targetApi="jelly_bean_mr1">@dimen/mediumMargin2</item>
        <item name="android:layout_marginTop" tools:targetApi="jelly_bean_mr1">@dimen/mediumMargin2</item>
    </style>

    <style name="Question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mediumMargin2</item>
        <item name="android:layout_marginBottom">@dimen/smallMargin</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/mediumMargin2</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mediumMargin1</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>